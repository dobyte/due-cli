    "version": "0.2.0",
    "configurations": [
        {
            "name": "Create a project",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}/",
            "args": [
                "create",
                "mesh",
                "--dir",
                "${workspaceFolder}/mesh",
                "--module",
                "mesh",
                "--codec",
                "json",
                "--locator",
                "etcd",
                "--registry",
                "etcd",
                "--transporter",
                "tcp",
            ],
        },
        {
            "name": "Install rpcx toolchain",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}/",
            "args": [
                "install",
                "rpcx",
                "--version",
                "latest",
            ],
        },
        {
            "name": "Upgrade due version",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}/",
            "args": [
                "upgrade",
                "--dir",
                "./testdata",
                "--version",
                "latest",
            ],
        },
    ]
}